graph TB
    subgraph VM["가상머신 (VM) 아키텍처"]
        direction TB
        VM_App1["App 1"]
        VM_App2["App 2"]
        VM_App3["App 3"]
        VM_GuestOS1["Guest OS 1<br/>(전체 OS)"]
        VM_GuestOS2["Guest OS 2<br/>(전체 OS)"]
        VM_GuestOS3["Guest OS 3<br/>(전체 OS)"]
        VM_Hypervisor["Hypervisor<br/>(하이퍼바이저)"]
        VM_HostOS["Host OS<br/>(호스트 OS)"]
        VM_Hardware["Hardware<br/>(하드웨어)"]
        
        VM_App1 --> VM_GuestOS1
        VM_App2 --> VM_GuestOS2
        VM_App3 --> VM_GuestOS3
        VM_GuestOS1 --> VM_Hypervisor
        VM_GuestOS2 --> VM_Hypervisor
        VM_GuestOS3 --> VM_Hypervisor
        VM_Hypervisor --> VM_HostOS
        VM_HostOS --> VM_Hardware
    end
    
    subgraph Container["컨테이너 (Container) 아키텍처"]
        direction TB
        C_App1["App 1"]
        C_App2["App 2"]
        C_App3["App 3"]
        C_Runtime["Container Runtime<br/>(Docker/containerd)"]
        C_HostOS["Host OS<br/>(호스트 OS - 공유)"]
        C_Hardware["Hardware<br/>(하드웨어 - 공유)"]
        
        C_App1 --> C_Runtime
        C_App2 --> C_Runtime
        C_App3 --> C_Runtime
        C_Runtime --> C_HostOS
        C_HostOS --> C_Hardware
    end
    
    style VM fill:#fff5f5,stroke:#ff6b6b,stroke-width:2px
    style Container fill:#f0f9ff,stroke:#4ecdc4,stroke-width:2px
    style VM_Hypervisor fill:#ffa07a,stroke:#ff6b6b,stroke-width:3px
    style C_Runtime fill:#95e1d3,stroke:#4ecdc4,stroke-width:3px
    style VM_HostOS fill:#95a5a6,stroke:#7f8c8d,stroke-width:2px
    style C_HostOS fill:#95a5a6,stroke:#7f8c8d,stroke-width:2px
    style VM_Hardware fill:#34495e,stroke:#2c3e50,stroke-width:2px
    style C_Hardware fill:#34495e,stroke:#2c3e50,stroke-width:2px
