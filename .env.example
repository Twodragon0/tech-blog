# LinkedIn API Credentials
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# LinkedIn OAuth 2.0 Credentials
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# LinkedIn OAuth Redirect URI (must match LinkedIn Developer Portal settings)
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback

# LinkedIn Access Token (obtained after OAuth flow)
# This will be set automatically after authentication
LINKEDIN_ACCESS_TOKEN=

# LinkedIn Person ID (your LinkedIn profile ID)
# This will be set automatically after authentication
LINKEDIN_PERSON_ID=

# Site Configuration
SITE_URL=https://tech.2twodragon.com

# Other SNS API Keys (optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

FACEBOOK_PAGE_ID=
FACEBOOK_ACCESS_TOKEN=

# ============================================
# Audio/Video Generation API Keys
# ============================================

# ElevenLabs API (Required for audio generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# DeepSeek API (Optional, for script generation)
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here

# Gemini API (Optional, for script generation and improvement)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Google Cloud OAuth 2.0 (Recommended)
# ============================================
# Use service account for secure authentication
# Download service account key from Google Cloud Console
# See scripts/GEMINI_OAUTH_SETUP.md for detailed instructions

# Google Cloud Service Account Credentials
# Path to the service account key JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-service-account-key.json

# Google Cloud Project ID
# Replace with your actual project ID
GOOGLE_CLOUD_PROJECT=your-project-id-here

# Enable OAuth 2.0 for Gemini API (recommended)
USE_GEMINI_OAUTH=true

# ============================================
# API Selection Strategy
# ============================================

# Prefer Gemini AI Pro (default: true)
PREFER_GEMINI=true

# Use Gemini CLI (default: false, requires npm install -g @google/gemini-cli)
USE_GEMINI_CLI=false

# Use DeepSeek for script generation (default: true)
USE_DEEPSEEK_FOR_SCRIPT=true

# Use Gemini for script generation (default: true)
USE_GEMINI_FOR_SCRIPT=true

# Use Gemini for script improvement (default: true)
USE_GEMINI_FOR_IMPROVEMENT=true

# Enable caching (default: true)
ENABLE_CACHING=true
